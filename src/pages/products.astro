---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.vue';
import ProductsGrid from '../components/ProductsGrid.vue';
import Footer from '../components/Footer.vue';
---

<Layout title="AI Products - Kriyagni AI">
  <Header client:only="vue" />
  <main>
    <!-- Products Hero Section -->
    <section class="relative py-20 bg-white">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6 font-poppins">
          Our AI Products
        </h1>
        <p class="text-xl md:text-2xl text-gray-700 max-w-4xl mx-auto font-inter mb-8">
          Revolutionary AI solutions transforming industries across defense, healthcare, education, and business sectors.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-3 bg-gray-900 text-white font-semibold rounded-lg hover:bg-gray-800 transition-colors duration-300">
            View All Products
          </button>
          <button class="px-8 py-3 border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:border-gray-400 hover:text-gray-900 transition-colors duration-300">
            Schedule Demo
          </button>
        </div>
      </div>
    </section>

    <!-- Products Grid -->
    <ProductsGrid client:load />
  </main>
  <Footer client:load />
</Layout>
